@model AccountManagementSystem.Models.Account

<h1>Edit Account</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="code" /> <!-- Changed from AccountCode to code -->
    <input type="hidden" asp-for="person_code" /> <!-- Changed from PersonCode to person_code -->

    <div class="form-group">
        <label asp-for="account_number"></label> <!-- Changed from AccountNumber to account_number -->
        <input asp-for="account_number" class="form-control" />
        <span asp-validation-for="account_number" class="text-danger"></span> <!-- Changed validation -->
    </div>

    <div class="form-group">
        <label asp-for="outstanding_balance"></label> <!-- Changed from Balance to outstanding_balance -->
        <input asp-for="outstanding_balance" class="form-control" type="number" step="0.01" readonly />
        <span asp-validation-for="outstanding_balance" class="text-danger"></span> <!-- Changed validation -->
        <small class="form-text text-muted">Balance is controlled by transactions, not editable.</small>
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="is_closed" /> <!-- Changed from IsClosed to is_closed -->
            Closed
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Persons" asp-action="Details" asp-route-id="@Model.person_code" class="btn btn-secondary">Back</a> <!-- Changed from PersonCode to person_code -->
</form>